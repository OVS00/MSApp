<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E3F2FD">

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0D47A1"
    android:text="@string/title"
    android:textSize="16sp"
    android:textColor="#FFFFFF"
    android:padding="16dp"
    android:layout_gravity="left"
    android:layout_alignRight="@+id/linear_categories"
    android:layout_alignLeft="@+id/linear_categories"/>


   <LinearLayout
       android:id="@+id/linear_categories"
       android:layout_below="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="4dp"
       android:background="#448AFF"
       >
       <Button
           android:id="@+id/electro_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#000000"
           android:layout_marginLeft="4dp"
           android:text="electro"
           />
       <Button
           android:id="@+id/rock_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#000000"
           android:layout_marginLeft="4dp"
           android:text="rock"/>
       <Button
           android:id="@+id/classical_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#000000"
           android:layout_marginLeft="4dp"
           android:text="classical"/>
       <Button
           android:id="@+id/ethnic_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#000000"
           android:layout_marginLeft="4dp"
           android:text="ethnic"/>

   </LinearLayout>


</RelativeLayout>
